<?xml version="1.0" encoding="utf-8"?>
<!--
  Azure App Service IIS Configuration for Node.js
  This web.config file is required for running Node.js apps on Azure App Service (Windows)
-->
<configuration>
  <system.webServer>
    <!-- Indicates that the server.js file is a Node.js application to be handled by iisnode -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- URL Rewrite rules to route all requests to the Node.js app -->
    <rewrite>
      <rules>
        <!-- Don't interfere with requests for node-inspector debugging -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^dist/index.js\/debug[\/]?" />
        </rule>

        <!-- First check if the request is for a static file -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}" />
        </rule>

        <!-- All other URLs are routed to the Node.js app -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Exclude node_modules from serving static files -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- Configure iisnode -->
    <iisnode 
      watchedFiles="web.config;*.js"
      loggingEnabled="true"
      logDirectory="iisnode"
      debuggingEnabled="false"
      nodeProcessCommandLine="node"
    />

    <!-- Enable WebSockets and SSE -->
    <webSocket enabled="true" />

    <!-- Increase timeout for SSE connections -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="no-cache" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
